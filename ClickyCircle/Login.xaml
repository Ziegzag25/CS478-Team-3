<Window x:Class="ClickyCircle.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClickyCircle"
        mc:Ignorable="d"
        Title="Login" Height="214" Width="379"  ResizeMode="NoResize">
    <Grid Margin="0,0,0,-6" Background="Gray">

        <Label Content="User Name" HorizontalAlignment="Left" Margin="34,38,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="34,69,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <TextBox x:Name="TBUserName" HorizontalAlignment="Left" Margin="185,42,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="145" Grid.ColumnSpan="2" Grid.Column="1" MaxLength="20"/>
        <Button x:Name="BTNConfirm" Content="Confirm" HorizontalAlignment="Left" Margin="72,115,0,0" VerticalAlignment="Top" Width="72" Click="BTNConfirm_Click"/>
        <Button x:Name="BTNCancel" Content="Cancel" HorizontalAlignment="Left" Margin="185,115,0,0" VerticalAlignment="Top" Width="95" Click="BTNCancel_Click"/>
        <PasswordBox x:Name="PWDPassword" HorizontalAlignment="Left" Margin="185,73,0,0" VerticalAlignment="Top" Width="145" MaxLength="20"/>

    </Grid>
</Window>
