<Window x:Class="ClickyCircle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClickyCircle"
        mc:Ignorable="d"
        Title="ClickyCircle" Height="450" Width="800">
    <Canvas Name="MyCanvas" MouseLeftButtonDown="CanvasClicking" Background="#FF51C6DC">

        <Label Name="txtScore" FontSize="20" FontWeight="Bold" Content="Score: 0" />
        <Label Name="txtLastScore" FontSize="20" FontWeight="Bold" Foreground="Purple" Content="Last Score: 0" Canvas.Left="113" />

        <Rectangle Stroke="Black" Name="healthBar" Width="350" Fill="Red" Height="27" Canvas.Left="253" Canvas.Top="5" />
        <Button Content="Stop" Click="Pause_Click" Width="49" Foreground="#FF1B1919" Height="37" Canvas.Left="608" Canvas.Top="-1" Background="#FFF1FF00"/>
        <Button Content="Start" Background="#FFF1FF00" Click="Start_Click" Height="36" Width="49" Canvas.Left="657"/>
        <Button Content="Menu" Background="#FFF1FF00" Click="Button_Click_1" Height="36" Width="49" Canvas.Left="706"/>

    </Canvas>
</Window>
